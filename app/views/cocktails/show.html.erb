<div class="container">
  <div class="card-category" style="height: 85vh; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @cocktail.photo.key %>);">
    <div class="form-group w-50">
        <h2 class="card-title" style="text-align: center; border-bottom: 2px solid white;"><%= @cocktail.name %></h4>
<% @cocktail.doses.each do |dose| %>
      <div class="container d-flex justify-content-between">
        <div>
          <h5 class="card-title"><%= dose.ingredient.name %></h5>
          <h5 class="card-title"><%= dose.description %></h5>
        </div>
        <div class="dose-container">
          <button class="delete-tag" class="btn btn-warning"><i class="fas fa-times"></i></button>
          <%= link_to "", dose_path(dose), class: "hidden", method: :delete %>
        </div>
      </div>
<% end  %>
        <div class="pt-5">
        <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail), class: 'btn-ghost' %>
        <%= link_to 'Home', cocktails_path, class: "btn-ghost" %>
        </div>
    </div>
  </div>
</div>

