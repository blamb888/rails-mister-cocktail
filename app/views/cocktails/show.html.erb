<div class="container">
  <div class="card-category" style="height: 85vh; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @cocktail.photo.key %>);">
    <div class="form-group w-50">
      <h4 class="card-title"><%= @cocktail.name %></h4>
      <hr>
      <% @cocktail.doses.each do |dose| %>
      <h4 class="card-title"><%= dose.ingredient.name %></h4>
      <h4 class="card-title"><%= dose.description %></h4>
      </h4>
      <div class="pt-5">
        <%= link_to "Remove Ingredient", dose_path(dose), class: "delete-tag btn btn-flat mb-2", method: :delete %>
      <% end  %>
      <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail), class: 'btn btn-gradient' %>
      <%= link_to 'Home', cocktails_path, class: "btn btn-doge" %>
      </div>
    </div>
  </div>
</div>
