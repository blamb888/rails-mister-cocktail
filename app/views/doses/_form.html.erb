<div class="container">
  <div class="card-category" style="height: 85vh; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?movie,poster?blur=2);">
    <div class="form-group w-50">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient, collection: @ingredients %>
        <%= f.input :description %>
        <% if @cocktail.id %>
            <%= f.submit 'Update', class: 'btn btn-info' %>
            <%= link_to 'Home', cocktails_path, class: "btn btn-primary" %>
          <% else %>
            <%= f.submit 'Add', class: 'btn btn-info' %>
            <%= link_to 'Home', cocktails_path, class: "btn btn-primary" %>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
